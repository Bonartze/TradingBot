FROM debian:12

WORKDIR /testing

COPY . .

RUN apt-get update && apt-get install -y \
        build-essential \
        cmake \
        git \
        wget \
        curl \
        unzip \
        pkg-config \
        python3 \
        python3-pip \
        python3-venv \
        libboost-all-dev \
        libssl-dev \
        libcurl4-openssl-dev && \
        apt-get clean && rm -rf /var/lib/apt/lists/*


RUN mkdir -p /testing/Autotests/build

WORKDIR /testing/Autotests/build

RUN cmake .. && make -j$(nproc)
CMD ["./tests"]
